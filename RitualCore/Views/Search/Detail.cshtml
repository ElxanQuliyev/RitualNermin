@model HomeVM
@{
    ViewData["Title"] = Model.Video.Name;
}

<div class="breadcrumb-area" style="margin-top:10em">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="row breadcrumb_box  align-items-center">
                    <div class="col-lg-6 col-md-6 col-sm-12 text-center text-md-left">
                        <h5 class="breadcrumb-title">Ritual - @Model.Video.Name</h5>
                    </div>
                    <div class="col-lg-6  col-md-6 col-sm-12">
                        <!-- breadcrumb-list start -->
                        <ul class="breadcrumb-list text-center text-md-right">
                            <li class="breadcrumb-item"><a href="index.html">Ana Səhifə</a></li>
                            @*<li class="breadcrumb-item active">@Model.Video.Name</li>*@
                        </ul>
                        <!-- breadcrumb-list end -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<section class="my-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <iframe width="100%" height="315" src="https://www.youtube.com/embed/@Model.Video.YoutubeLink" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                <h2>@Model.Video.Name</h2>
                <p>@Model.Video.Description</p>
            </div>
            <div class="col-lg-4">
               <div class="sidebar-category my-4">
                   <h5>Kateqoriyalar</h5>
                   <ul class="list-group list-unstyled">
                       @foreach (var cat in Model.Categories)
                       {
                           <li>
                               <a class="list-group-item" href="/Search/Index/@cat.Id">@cat.Name</a>
                           </li>
                       }

                   </ul>
               </div>

                <div class="sidebar-widget mt-40px">
                    <h4 class="sidebar-title">Recent Post</h4>

                    <div class="recent-post-widget my-3">
                        @foreach (var video in Model.Videos)
                        {
                            <div class="recent-single-post my-3 d-flex">
                                <div class="thumb-side col-lg-4">
                                    <a href="/Search/Detail/@video.Id"><img class="img-fluid" src="~/Uploads/@video.Picture.Url" alt=""></a>
                                </div>
                                <div class="media-side">
                                    <h6>
                                        <a href="/Search/Detail/@video.Id">
                                         @(video.Name.Length>50?video.Name.Substring(0,50):video.Name)
                                        </a>
                                    </h6>
                                    <span class="date">APRIL 24, 2021</span>
                                </div>
                            </div>

                        }
                    </div>
                </div>
            </div>
            
        </div>
    </div>

</section>
